.promo-banner

    &__container
        background url('/images/fon-promo-banner.jpg') no-repeat center

    &__form
        width w(1134)
        
    &__questions
        display flex
        padding-left w(394)

    &__item
        font-family $ff-Arsenal
        font-weight 700
        font-size w(18)
        line-height w(23)
        padding-left w(55)
        &:first-child
            padding-left 0

    &__title
        font-weight 700
        font-size w(75)
        line-height w(93)
        text-align right
        text-transform uppercase
        padding-top w(42)
        span
            font-size w(50)

    &__feedback
        display flex
        padding-top w(20)
        padding-left w(392)

    &__input-name
        width w(271)
        height w(42)
        padding-left w(20)
        background $c-white
        border w(1) solid $c-grey
        border-radius w(53)

    &__input-number
        margin-left w(20)
        padding-left w(20)
        width w(271)
        height w(42)
        background $c-white
        border w(1) solid $c-grey
        border-radius w(53)

    &__sup-title
        padding-top w(56)
        padding-left w(392)
        font-family $ff-Arsenal
        font-weight 400
        font-size w(16)
        line-height w(20)

    &__submit
        width w(155)
        height w(42)
        background linear-gradient(97.83deg, #F9ED32 -2.86%, #FBB040 84.88%)
        border-radius w(53)
        font-family $ff-Arsenal
        font-style normal
        font-weight 400
        font-size w(10)
        line-height w(18)
        color $c-black
        border none
        margin-left w(35)

    &__text-checkbox
        padding-left w(5)
        font-family $ff-Arsenal
        font-weight 400
        font-size w(10)
        line-height w(13)
        color $c-black
        span
            padding-bottom w(2)
            font-weight 700
            border-bottom w(1px) solid $c-black
            color $c-black

    &__wrap-checkbox
        display flex
        flex-direction row
        padding w(12) 0 w(59) w(394)

    &__checkbox
        width w(15)
        height w(15)
        border w(1) solid $c-grey
        border-radius w(2)
